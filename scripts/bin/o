#!/bin/bash
# Open

open_with() {
	program=$1
	shift
	"$program" "$@" >/dev/null 2>&1 &disown
}

if [[ $# -eq 0 ]]; then
	if [[ -f Cargo.toml ]]; then
		open_with nvim-qt Cargo.toml src/**/*.rs
	fi
	exit 0
fi

while [[ $# -ge 1 ]]; do
	ext=${1##*.}
	case $ext in
		"pdf")
			open_with zathura "$1"
			;;
		"pdc"|"tex"|"py"|"sh"|"toml")
			open_with nvim-qt "$1"
			;;
		"epub"|"mobi")
			open_with ebook-viewer "$1"
			;;
		"uxf")
			open_with umlet "$1"
			;;
		*)
			open_with xdg-open "$1"
			;;
	esac
	shift
done
